<h1>Patient: <%= @patient.name %></h1>

<div>
	<h4>Appointments:</h4>
<% @patient.appointments.each do |appointment| %>
	<p>Date/time: <%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M")%></p>
	<p>Doctor: <%= link_to appointment.doctor.name, doctor_path(appointment.doctor)%></p>
<% end %>
</div>