<h1>Doctor: <%= @doctor.name %></h1>
<h2><%= @doctor.department %></h2>

<div>
	<h4>Appointments:</h4>
<% @doctor.appointments.each do |appointment| %>
	<p>Date/time: <%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M")%></p>
	<p>Patient: <%= link_to appointment.patient.name, patient_path(appointment.patient)%></p>
<% end %>
</div>